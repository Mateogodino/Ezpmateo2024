<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ezpmateo2024</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EzpeletaNetCore8.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Always Gym</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="btn-group navbar-collapse collapse d-sm-inline-flex justify-content-between" role="group">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a type="button" class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a> 
                        </li>
                         <li class="nav-item">
                            <a type="button" class="btn btn-outline-primary" asp-area="" asp-controller="TipoEjercicios" asp-action="Index">Tipo de Ejercicios</a>
                        </li>
                        <li class="nav-item">
                            <a type="button" class="btn btn-outline-primary" asp-area="" asp-controller="EjerciciosFisicos" asp-action="Index">Ejercicios Fisicos</a>
                        </li>
                        <li class="nav-item">

                            <a type="button" class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EzpeletaNetCore8 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
